{
  "compilerOptions": {
    "target": "es2017",
    "module": "ESNext",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react",
    "allowJs": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "paths": {}
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "typings",
    "packages/taro-ui-vue3/**/*",
  ],
  "compileOnSave": false
}