{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "paths": {
      "@/components/*": [
        "packages/taro-ui-vue3/src/components/*"
      ],
      "@/utils/*": [
        "packages/taro-ui-vue3/src/utils/*"
      ],
      "@/style/*": [
        "packages/taro-ui-vue3/src/style/*"
      ],
      "types/*": [
        "packages/taro-ui-vue3/types/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "typings",
    "packages/taro-ui-vue3/types",
    "packages/taro-ui-vue3/src/**/*"
  ],
  "compileOnSave": false
}