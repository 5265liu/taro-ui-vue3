{
  "name": "taro-ui-vue3",
  "version": "1.0.0-dev.4",
  "description": "Taro UI Rewritten in Vue 3.0",
  "author": "b2nil",
  "license": "MIT",
  "main:h5": "dist/index.esm.js",
  "module": "dist/index.esm.js",
  "main": "dist/index.js",
  "source": "packages/taro-ui-vue3/taro-ui-vue3/index.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:b2nil/taro-ui-vue3.git"
  },
  "workspaces": {
    "packages": [
      "packages/taro-ui-vue3/*"
    ]
  },
  "keywords": [
    "taro",
    "taro-ui-vue3",
    "ui"
  ],
  "files": [
    "lib",
    "dist"
  ],
  "scripts": {
    "gen": "bash ./scripts/gen_comp.sh",
    "bootstrap": "lerna bootstrap",
    "build:component": "lerna run --scope taro-ui-vue3 build",
    "clean:component": "lerna run --scope taro-ui-vue3 clean",
    "publish": "lerna publish from-git --yes",
    "dev": "yarn dev:lib",
    "dev:lib": "tsc --project ./tsconfig.build.json --watch --incremental",
    "build": "yarn build:bundle && yarn build:lib",
    "build:lib": "node ./build/bincomp.js",
    "build:lib-dev": "cross-env LIB_ENV=dev node ./build/bincomp.js",
    "bundle": "rollup --config ./build/rollup.config.bundle.js",
    "bundle-dev": "cross-env LIB_ENV=dev rollup --config ./build/rollup.config.bundle.js",
    "test:analyze": "rollup --config ./build/rollup.config.analyze.js",
    "clean": "rimraf dist lib",
    "clog": "conventional-changelog -p angular -i CHANGELOG.md -s -r",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules && jest --clearCache && jest --coverage"
  },
  "dependencies": {
    "dayjs": "^1.8.29",
    "lodash": "^4.17.19"
  },
  "peerDependencies": {
    "vue": "^3.0.0",
    "@tarojs/taro": "^3.0.0",
    "@tarojs/components": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.0",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-modules-commonjs": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@babel/runtime": "^7.7.7",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-json": "^4.0.3",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@tarojs/mini-runner": "^3.0.7",
    "@tarojs/runtime": "^3.0.7",
    "@tarojs/taro": "^3.0.7",
    "@tarojs/webpack-runner": "^3.0.7",
    "@types/jest": "^26.0.15",
    "@types/webpack-env": "^1.13.6",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "@vue/babel-plugin-jsx": "^1.0.0-rc.3",
    "@vue/compiler-sfc": "^3.0.0",
    "babel-jest": "^26.6.3",
    "babel-preset-taro": "^3.0.7",
    "conventional-changelog-cli": "^2.0.31",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-import-resolver-custom-alias": "^1.2.0",
    "eslint-plugin-import": "^2.20.2",
    "jest": "^24.9.0",
    "lerna": "^3.20.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.33.1",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-sass": "^1.2.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.27.1",
    "rollup-plugin-visualizer": "^4.0.4",
    "rollup-plugin-vue": "^6.0.0-beta.8",
    "stylelint": "^13.3.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.16.0",
    "typescript": "^3.7.0",
    "vue": "^3.0.0",
    "vue-jest": "^5.0.0-alpha.6",
    "vue-loader": "^16.0.0-beta.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --quiet --cache --fix",
    "src/**/*.scss": "stylelint --syntax scss --fix"
  },
  "browserslist": [
    "last 3 versions",
    "Android >= 4.1",
    "ios >= 8"
  ]
}