{
    "extends": "../../tsconfig.build",
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "lib": ["es6", "dom", "es2017"],
        "downlevelIteration": true,
        "strictNullChecks": false,
        "baseUrl": "./",
        "rootDir": "src",
        "typeRoots": [
            "node",
            "node_modules/@types",
            "types",
            "global.d.ts"
        ],
        "paths": {
            "@/components/*": [
                "src/components/*"
            ],
            "@/utils/*": [
                "src/utils/*"
            ],
            "@/style/*": [
                "src/style/*"
            ],
        }
    },
    "include": [
        "src/**/*"
    ]
}