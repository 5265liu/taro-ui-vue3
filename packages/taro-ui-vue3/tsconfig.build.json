{
  "extends": "../../tsconfig.build",
  "compilerOptions": {
    "target": "es2017",
    "module": "es6",
    "lib": ["es6", "dom", "es2017"],
    "rootDir": "src",
    "outDir": "./lib",
    "typeRoots": [
      "node",
      "node_modules/@types",
      "types",
      "global.d.ts"
    ],
    "baseUrl": "./",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/utils/*": ["src/utils/*"],
      "@/style/*": ["src/style/*"],
    }
  },
  "include": [
    "src/**/*"
  ]
}
